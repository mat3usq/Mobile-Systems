<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/task_item_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/task_undone_icon"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:padding="@dimen/task_item_padding"
        app:srcCompat="@drawable/ic_check_box_checked" />


    <TextView
        android:id="@+id/task_item_name"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:drawablePadding="8dp"
        style="@style/TextFieldsStyleName"/>

    <TextView
        android:id="@+id/task_item_date"
        style="@style/TextFieldsStyle"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/task_category"
        android:layout_width="62dp"
        android:layout_height="40dp"
        android:layout_weight="0.1"
        android:padding="@dimen/task_item_padding"
        app:srcCompat="@drawable/ic_home_foreground"
        android:drawablePadding="8dp"
        style="@style/TextFieldsStyleName"/>/>
</LinearLayout>
