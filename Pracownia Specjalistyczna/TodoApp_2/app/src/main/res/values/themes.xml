<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TodoApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/secondary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/text_on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextFieldsStyle">
        <item name="android:background">@color/secondary_light</item>
        <item name="android:textColor">@color/text_on_secondary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">50pt</item>
        <item name="android:padding">@dimen/task_item_padding</item>
    </style>

    <style name="TextFieldsStyleName">
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/text_on_secondary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_field_size</item>
        <item name="android:padding">@dimen/task_item_padding</item>
    </style>


    <style name="TextFieldsStylex">
        <item name="android:background">@color/secondary_dark</item>
        <item name="android:textColor">@color/text_on_secondary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">60pt</item>
        <item name="android:padding">@dimen/task_item_padding</item>
        <item name="android:gravity">center</item>
    </style>
</resources>